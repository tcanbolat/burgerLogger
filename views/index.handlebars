<div class="container">
    <h1 class="text-center mb-5 mt-5">Eat-Da-Burger</h1>
    <div class="row ">


        <div class="col">


            <div class="card mb-3 bg-transparent mx-auto text-center">
                <h4 class="text-center mb-4"><i class="fas fa-utensils"></i> ready to devour</h4>

                <img src="/assets/burgerBunTop.png" class="card-img-top" alt=".burgerbuntop">
                <div class="card-body">
                    <span>
                        {{#each burgers}}
                        {{#unless DEVOURED}}
                        {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                        {{/each}}
                        </ul>
                        <img src="/assets/burgerBunBottom.png" class="card-img-top" alt="burgerbunbottom">
                </div>
            </div>
        </div>




        <div class="col-3 text-center mx-auto">
            <div class="card p-3 mt-5 shadow">
                <blockquote class="blockquote mb-0">
                    <form class="create-Burger">

                        <div class="form-group">
                            <label for="burg">New Burger:</label>
                            <input class="form-control" type="text" id="burg" name="name">
                        </div>
                        <button class="btn btn-danger" type="submit">Submit</button>

                    </form>
                </blockquote>
            </div>
        </div>


        <div class="col">

            <div class="card mb-3 bg-transparent mx-auto text-center">
                <h4 class="text-center mb-4"><i class="fas fa-cookie-bite"></i> devoured</h4>

                <img src="/assets/burgerBunTop.png" class="card-img-top" alt=".burgerbuntop">
                <div class="card-body">
                    <span>
                        {{#each burgers}}
                        {{#if DEVOURED}}
                        {{> burgers/burger-block devoured=false}}
                        {{/if}}
                        {{/each}}
                    </span>
                    <img src="/assets/burgerBunBottom.png" class="card-img-top" alt="burgerbunbottom">
                </div>
            </div>
        </div>


    </div>
</div>